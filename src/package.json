{
  "name": "solara-v3",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "monaco-editor": "^0.55.1"
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^25.1.6"
  },
  "build": {
    "appId": "com.solara.app",
    "productName": "Solara",
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.developer-tools",
      "icon": "Assets/icons/hulu-icon.icns"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150,
          "type": "file"
        },
        {
          "x": 440,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
